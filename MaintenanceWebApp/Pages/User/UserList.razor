@page "/UserList"
@using MaintenanceWebApp.Data
@using MaintenanceWebApp.Services
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager
@implements IDisposable

@* Services *@
@inject CRUDService CRUDService
@inject UrlStatusService UrlStatusService
@inject TableService TableService
@inject NotificationService NotificationService

@* Roles Authorize *@
@attribute [Authorize(Roles = "Admin, Terminal Manager, Maintenance Supervisor")]

@* Komponen Daftar Pengguna *@
<div class="card p-3">
    @* Notifikasi Status *@
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="container px-0">
            <div style="padding: 10px;" class="alert alert-success alert-dismissible fade show" role="alert">
                @statusMessage
                <button style="background-color: transparent; border: transparent; float: right; z-index: 0; padding: 1rem;" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tutup"></button>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-5 form-group">
            <h5 class="display-6">Pengguna</h5>
            @if (HasUsers)
            {
                <div class="d-flex align-items-center mt-3">
                    Jumlah per Halaman:
                    <select class="form-select form-select-sm w-auto ms-2" @bind="pagination.ItemsPerPage">
                        <option value="5">5</option>
                        @if (UserCount > 5)
                        {
                            <option value="10">10</option>
                        }
                        @if (UserCount > 10)
                        {
                            <option value="20">20</option>
                        }
                        @if (UserCount > 20)
                        {
                            <option value="50">50</option>
                        }
                    </select>
                </div>
            }
        </div>

        @if (canEditData)
        {
            <div class="col-sm-7 d-flex justify-content-end align-items-center">
                <button class="btn btn-primary" @onclick="NavigateToAddUser">
                    + Tambah
                </button>
            </div>
        }
    </div>

    <div>
        @* Tampilan Data Pengguna *@
        @if (isLoading)
        {
            @* Memuat Data *@
            <div class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Memuat...</span>
                </div>
                <p>Memuat Data Pengguna...</p>
            </div>
        }
        else if (!HasUsers)
        {
            @* Tidak Ada Data *@
            <hr />
            <div class="text-center py-3">
                <p>Tidak ada pengguna ditemukan.</p>
                @if (!string.IsNullOrEmpty(searchFilter))
                {
                    <button class="btn btn-link" @onclick="ClearFilter">Hapus Filter</button>
                }
            </div>
        }
        else
        {
            @* Kotak Pencarian *@
            <div class="search-box mb-3 mt-3">
                <input class="form-control" type="search" autofocus @bind="searchFilter" @bind:event="oninput" placeholder="Cari Nama, Role, atau Section..." />
            </div>

            @* Tabel Data Pengguna *@
            <QuickGrid Items="FilteredUsers" Virtualize="false" Pagination="pagination" Class="table table-striped table-hover table-bordered">
                <TemplateColumn Title="Nama" Sortable="true">
                    <a style="cursor:pointer; color: royalblue;" @onclick="@(() => NavigateToUserInfo(context))">
                        @context.FullName
                    </a>
                </TemplateColumn>
                <PropertyColumn Property="@(user => user.Section)" Title="Section" Sortable="true" />
                <PropertyColumn Property="@(user => user.Role)" Title="Role" Sortable="true" />

                @if (canEditData)
                {
                    <TemplateColumn Title="Aksi" Class="td-action">
                        <button @onclick="@(() => NavigateToEditUser(@context))" class="btn btn-warning btn-sm">
                            <span class="oi oi-pencil"></span>
                        </button>
                        <button @onclick="@(() => NavigateToDeleteUser(context))" class="btn btn-danger btn-sm">
                            <span class="oi oi-trash"></span>
                        </button>
                    </TemplateColumn>
                }
            </QuickGrid>

            <Paginator State="pagination" />
        }
    </div>
</div>

@code {
    // Cascading Parameter
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    // Properti State
    private bool canEditData;
    private IQueryable<User>? allUsers;
    private bool isLoading = true;
    private string statusMessage = string.Empty;

    // Konstanta
    private const string ADD_USER_PATH = "/UserAdd";
    private const string USER_INFO_PATH = "/UserInfo/{0}";
    private const string USER_EDIT_PATH = "/UserEdit/{0}";
    private const string USER_DELETE_PATH = "/UserDelete/{0}";

    // Pagination State
    private PaginationState pagination = new() { ItemsPerPage = 5 };

    // Properti Terkomputasi
    private bool HasUsers => !isLoading && (allUsers?.Any() ?? false);
    private int UserCount => allUsers?.Count() ?? 0;

    // Properti untuk Filtering
    private string searchFilter
    {
        get => TableService.NoFilter ?? string.Empty;
        set
        {
            if (TableService.NoFilter != value)
            {
                TableService.NoFilter = value;
                StateHasChanged();
            }
        }
    }

    private IQueryable<User> FilteredUsers
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchFilter))
            {
                return allUsers ?? Enumerable.Empty<User>().AsQueryable();
            }

            return allUsers?.Where(user =>
                (!string.IsNullOrEmpty(user.FullName) && user.FullName.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(user.Role) && user.Role.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(user.Section) && user.Section.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)))
                ?? Enumerable.Empty<User>().AsQueryable();
        }
    }

    // Metode Lifecycle
    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        await CheckUserAuthorizationAsync();
        await LoadAllUsersAsync();
        LoadUrlStatus();
    }

    public void Dispose()
    {
        GC.SuppressFinalize(this);
    }

    // Metode Bantuan (Helper Methods)
    private async Task CheckUserAuthorizationAsync()
    {
        if (authenticationStateTask is not null)
        {
            var authenticationState = await authenticationStateTask;
            var user = authenticationState.User;
            canEditData = user.IsInRole("Admin") || user.IsInRole("Maintenance Supervisor");
        }
    }

    private async Task LoadAllUsersAsync()
    {
        try
        {
            allUsers = (await CRUDService.ReadAllAsync<User>(orderBy: q => q.OrderBy(u => u.Id)))
                .ToList()
                .AsQueryable();
        }
        catch (Exception ex)
        {
            NotificationService.AlertMessage($"Error saat memuat data pengguna: {ex.Message}");
            NotificationService.LogMessage($"Error saat memuat data pengguna: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private void LoadUrlStatus()
    {
        statusMessage = UrlStatusService.GetAndClearUrlStatusMessage();

        if (!string.IsNullOrEmpty(statusMessage))
        {
            LoadAllUsersAsync();
            var uri = new Uri(NavigationManager.Uri);
            NavigationManager.NavigateTo(uri.AbsolutePath, replace: true);
        }
    }

    // Event Handler dan Navigasi
    private void ClearFilter()
    {
        searchFilter = string.Empty;
    }

    private void NavigateToAddUser()
    {
        NavigationManager.NavigateTo(ADD_USER_PATH);
    }

    private void NavigateToUserInfo(User user)
    {
        NavigationManager.NavigateTo(string.Format(USER_INFO_PATH, user.Id));
    }

    private void NavigateToEditUser(User user)
    {
        NavigationManager.NavigateTo(string.Format(USER_EDIT_PATH, user.Id));
    }

    private void NavigateToDeleteUser(User user)
    {
        NavigationManager.NavigateTo(string.Format(USER_DELETE_PATH, user.Id));
    }
}