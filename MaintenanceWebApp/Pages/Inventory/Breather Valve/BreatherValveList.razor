@page "/BreatherValveList"
@using MaintenanceWebApp.Data
@using MaintenanceWebApp.Services
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

@* Services *@
@inject CRUDService CRUDService
@inject UrlStatusService UrlStatusService
@inject TableService TableService
@inject NotificationService NotificationService

@* Otorisasi Berdasarkan Peran *@
@attribute [Authorize(Roles = "Admin, Terminal Manager, Maintenance Supervisor, Maintenance")]

@* Komponen Daftar Breather Valve *@
<div class="card p-3">
    @* Notifikasi Status *@
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="container px-0">
            <div style="padding: 10px;" class="alert alert-success alert-dismissible fade show" role="alert">
                @statusMessage
                <button style="background-color: transparent; border: transparent; float: right; z-index: 0; padding: 1rem;"
                        type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tutup"></button>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-5 form-group">
            <h5 class="display-6">Breather Valve</h5>
            @if (HasBreatherValves)
            {
                <div class="d-flex align-items-center mt-3">
                    Jumlah per Halaman:
                    <select class="form-select form-select-sm w-auto ms-2" @bind="pagination.ItemsPerPage">
                        <option value="5">5</option>
                        @if (BreatherValveCount > 5)
                        {
                            <option value="10">10</option>
                        }
                        @if (BreatherValveCount > 10)
                        {
                            <option value="20">20</option>
                        }
                        @if (BreatherValveCount > 20)
                        {
                            <option value="50">50</option>
                        }
                    </select>
                </div>
            }
        </div>

        @if (canEditData)
        {
            <div class="col-sm-7 d-flex justify-content-end align-items-center">
                <button class="btn btn-primary" @onclick="NavigateToAddBreatherValve">
                    + Tambah
                </button>
            </div>
        }
    </div>

    <div>
        @* Tampilan Data Breather Valve *@
        @if (isLoading)
        {
            @* Memuat Data *@
            <div class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Memuat...</span>
                </div>
                <p>Memuat Data Breather Valve...</p>
            </div>
        }
        else if (!HasBreatherValves)
        {
            @* Tidak Ada Data *@
            <hr />
            <div class="text-center py-3">
                <p>Tidak ada data breather valve ditemukan.</p>
                @if (!string.IsNullOrEmpty(searchFilter))
                {
                    <button class="btn btn-link" @onclick="ClearFilter">Hapus Filter</button>
                }
            </div>
        }
        else
        {
            @* Kotak Pencarian *@
            <div class="search-box mb-3 mt-3">
                <input class="form-control" type="search" autofocus @bind="searchFilter" @bind:event="oninput" placeholder="Cari No Tangki, Merk, atau Tahun..." />
            </div>

            @* Tabel Data Breather Valve *@
            <QuickGrid Items="FilteredBreatherValves" Virtualize="false" Pagination="pagination" Class="table table-striped table-hover table-bordered">
                <TemplateColumn Title="No Tangki" Sortable="true">
                    <a style="cursor:pointer; color: royalblue;" @onclick="@(() => NavigateToBreatherValveInfo(context))">
                        @context.Tank
                    </a>
                </TemplateColumn>
                <PropertyColumn Property="@(breatherValve => breatherValve.Brand)" Title="Merk" Sortable="true" />
                <PropertyColumn Property="@(breatherValve => breatherValve.Type)" Title="Tahun" Sortable="true" />

                @if (canEditData)
                {
                    <TemplateColumn Title="Aksi" Class="td-action">
                        <button @onclick="@(() => NavigateToEditBreatherValve(@context))" class="btn btn-warning btn-sm">
                            <span class="oi oi-pencil"></span>
                        </button>
                        <button @onclick="@(() => NavigateToDeleteBreatherValve(context))" class="btn btn-danger btn-sm">
                            <span class="oi oi-trash"></span>
                        </button>
                    </TemplateColumn>
                }
            </QuickGrid>

            <Paginator State="pagination" />
        }
    </div>
</div>

@code {
    // Cascading Parameter
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    // Properti State
    private bool canEditData;
    private IQueryable<BreatherValve>? _allBreatherValves;
    private bool isLoading = true;
    private string statusMessage = string.Empty;

    // Konstanta
    private const string ADD_BREATHER_VALVE_PATH = "./BreatherValveAdd";
    private const string BREATHER_VALVE_INFO_PATH = "./BreatherValveInfo/{0}";
    private const string BREATHER_VALVE_EDIT_PATH = "./BreatherValveEdit/{0}";
    private const string BREATHER_VALVE_DELETE_PATH = "./BreatherValveDelete/{0}";

    // Pagination State
    private PaginationState pagination = new() { ItemsPerPage = 5 };

    // Properti Terkomputasi
    private bool HasBreatherValves => !isLoading && (_allBreatherValves?.Any() ?? false);
    private int BreatherValveCount => _allBreatherValves?.Count() ?? 0;

    // Properti untuk Filtering
    private string searchFilter
    {
        get => TableService.NoFilter ?? string.Empty;
        set
        {
            if (TableService.NoFilter != value)
            {
                TableService.NoFilter = value;
            }
        }
    }

    private IQueryable<BreatherValve> FilteredBreatherValves
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchFilter))
            {
                return _allBreatherValves ?? Enumerable.Empty<BreatherValve>().AsQueryable();
            }

            return _allBreatherValves?.Where(valve =>
                (!string.IsNullOrEmpty(valve.Tank) && valve.Tank.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(valve.Brand) && valve.Brand.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(valve.Type) && valve.Type.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)))
                ?? Enumerable.Empty<BreatherValve>().AsQueryable();
        }
    }

    // Metode Lifecycle
    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        await CheckUserAuthorizationAsync();
        await LoadAllBreatherValvesAsync();
        LoadUrlStatus();
    }

    // Metode Bantuan (Helper Methods)
    private async Task CheckUserAuthorizationAsync()
    {
        // Memeriksa peran pengguna untuk menentukan apakah mereka memiliki izin untuk mengedit data.
        if (authenticationStateTask is not null)
        {
            var authenticationState = await authenticationStateTask;
            var user = authenticationState.User;
            canEditData = user.IsInRole("Admin") || user.IsInRole("Maintenance") || user.IsInRole("Maintenance Supervisor");
        }
    }

    private async Task LoadAllBreatherValvesAsync()
    {
        // Mengambil semua data breather valve dari database secara asinkron.
        try
        {
            _allBreatherValves = (await CRUDService.ReadAllAsync<BreatherValve>(orderBy: q => q.OrderBy(v => v.BreatherValveID)))
                .ToList()
                .AsQueryable();
        }
        catch (Exception ex)
        {
            // Menangani kesalahan saat memuat data dengan notifikasi yang informatif.
            NotificationService.AlertMessage($"Terjadi kesalahan saat memuat data Breather Valve. Silakan coba kembali nanti.");
            NotificationService.LogMessage($"Kesalahan saat memuat data Breather Valve: {ex.Message}");
        }
        finally
        {
            // Mengubah status loading setelah data berhasil dimuat atau terjadi kesalahan.
            isLoading = false;
        }
    }

    private void LoadUrlStatus()
    {
        // Mengambil dan menghapus pesan status dari URL jika ada.
        statusMessage = UrlStatusService.GetAndClearUrlStatusMessage();

        // Jika ada pesan status, navigasi ulang untuk membersihkan URL agar tidak muncul lagi saat refresh.
        if (!string.IsNullOrEmpty(statusMessage))
        {
            NavigationManager.NavigateTo(NavigationManager.Uri.Split('?')[0], replace: true);
        }
    }

    // Event Handler dan Navigasi
    private void ClearFilter()
    {
        // Mengatur ulang filter pencarian menjadi string kosong.
        searchFilter = string.Empty;
    }

    private void NavigateToAddBreatherValve()
    {
        // Navigasi ke halaman untuk menambah data breather valve baru.
        NavigationManager.NavigateTo(ADD_BREATHER_VALVE_PATH);
    }

    private void NavigateToBreatherValveInfo(BreatherValve breathervalve)
    {
        // Navigasi ke halaman detail informasi breather valve berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(BREATHER_VALVE_INFO_PATH, breathervalve.BreatherValveID));
    }

    private void NavigateToEditBreatherValve(BreatherValve breathervalve)
    {
        // Navigasi ke halaman untuk mengedit data breather valve berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(BREATHER_VALVE_EDIT_PATH, breathervalve.BreatherValveID));
    }

    private void NavigateToDeleteBreatherValve(BreatherValve breathervalve)
    {
        // Navigasi ke halaman untuk menghapus data breather valve berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(BREATHER_VALVE_DELETE_PATH, breathervalve.BreatherValveID));
    }
}