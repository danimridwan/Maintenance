@page "/PRVValveList"
@using MaintenanceWebApp.Data
@using MaintenanceWebApp.Services
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

@* Services *@
@inject CRUDService CRUDService
@inject UrlStatusService UrlStatusService
@inject TableService TableService
@inject NotificationService NotificationService

@* Otorisasi Berdasarkan Peran *@
@attribute [Authorize(Roles = "Admin, Terminal Manager, Maintenance Supervisor, Maintenance")]

@* Komponen Daftar PRV Valve *@
<div class="card p-3">
    @* Notifikasi Status *@
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="container px-0">
            <div style="padding: 10px;" class="alert alert-success alert-dismissible fade show" role="alert">
                @statusMessage
                <button style="background-color: transparent; border: transparent; float: right; z-index: 0; padding: 1rem;"
                        type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tutup"></button>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-5 form-group">
            <h5 class="display-6">PRV Valve</h5>
            @if (HasPRVValves)
            {
                <div class="d-flex align-items-center mt-3">
                    Jumlah per Halaman:
                    <select class="form-select form-select-sm w-auto ms-2" @bind="pagination.ItemsPerPage">
                        <option value="5">5</option>
                        @if (PRVValveCount > 5)
                        {
                            <option value="10">10</option>
                        }
                        @if (PRVValveCount > 10)
                        {
                            <option value="20">20</option>
                        }
                        @if (PRVValveCount > 20)
                        {
                            <option value="50">50</option>
                        }
                    </select>
                </div>
            }
        </div>

        @if (canEditData)
        {
            <div class="col-sm-7 d-flex justify-content-end align-items-center">
                <button class="btn btn-primary" @onclick="NavigateToAddPRVValve">
                    + Tambah
                </button>
            </div>
        }
    </div>

    <div>
        @* Tampilan Data PRV Valve *@
        @if (isLoading)
        {
            @* Memuat Data *@
            <div class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Memuat...</span>
                </div>
                <p>Memuat Data PRV Valve...</p>
            </div>
        }
        else if (!HasPRVValves)
        {
            @* Tidak Ada Data *@
            <hr />
            <div class="text-center py-3">
                <p>Tidak ada data PRV Valve ditemukan.</p>
                @if (!string.IsNullOrEmpty(searchFilter))
                {
                    <button class="btn btn-link" @onclick="ClearFilter">Hapus Filter</button>
                }
            </div>
        }
        else
        {
            @* Kotak Pencarian *@
            <div class="search-box mb-3 mt-3">
                <input class="form-control" type="search" autofocus @bind="searchFilter" @bind:event="oninput" placeholder="Cari No Tangki, Kategori, Merk, atau Tipe..." />
            </div>

            @* Tabel Data PRV Valve *@
            <QuickGrid Items="FilteredPRVValves" Virtualize="false" Pagination="pagination" Class="table table-striped table-hover table-bordered">
                <TemplateColumn Title="No Tangki" Sortable="true">
                    <a style="cursor:pointer;
                       color: royalblue;" @onclick="@(() => NavigateToPRVValveInfo(context))">
                        @context.TankNumber
                    </a>
                </TemplateColumn>
                <PropertyColumn Property="@(prvValve => prvValve.Category)" Title="Kategori" Sortable="true" />
                <PropertyColumn Property="@(prvValve => prvValve.Brand)" Title="Merk" Sortable="true" />
                <PropertyColumn Property="@(prvValve => prvValve.Type)" Title="Tipe" Sortable="true" />

                @if (canEditData)
                {
                    <TemplateColumn Title="Aksi" Class="td-action">
                        <button @onclick="@(() => NavigateToEditPRVValve(@context))" class="btn btn-warning btn-sm">
                            <span class="oi oi-pencil"></span>
                        </button>
                        <button @onclick="@(() => NavigateToDeletePRVValve(context))" class="btn btn-danger btn-sm">
                            <span class="oi oi-trash"></span>
                        </button>
                    </TemplateColumn>
                }
            </QuickGrid>

            <Paginator State="pagination" />
        }
    </div>
</div>

@code {
    // Cascading Parameter
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    // Properti State
    private bool canEditData;
    private IQueryable<PRVValve>? _allPRVValve;
    private bool isLoading = true;
    private string statusMessage = string.Empty;

    // Konstanta
    private const string ADD_PRV_VALVE_PATH = "./PRVValveAdd";
    private const string PRV_VALVE_INFO_PATH = "./PRVValveInfo/{0}";
    private const string PRV_VALVE_EDIT_PATH = "./PRVValveEdit/{0}";
    private const string PRV_VALVE_DELETE_PATH = "./PRVValveDelete/{0}";

    // Pagination State
    private PaginationState pagination = new() { ItemsPerPage = 5 };

    // Properti Terkomputasi
    private bool HasPRVValves => !isLoading && (_allPRVValve?.Any() ?? false);
    private int PRVValveCount => _allPRVValve?.Count() ?? 0;

    // Properti untuk Filtering
    private string searchFilter
    {
        get => TableService.NoFilter ?? string.Empty;
        set
        {
            if (TableService.NoFilter != value)
            {
                TableService.NoFilter = value;
            }
        }
    }

    private IQueryable<PRVValve> FilteredPRVValves
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchFilter))
            {
                return _allPRVValve ?? Enumerable.Empty<PRVValve>().AsQueryable();
            }

            return _allPRVValve?.Where(prvValve =>
                (!string.IsNullOrEmpty(prvValve.TankNumber) && prvValve.TankNumber.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(prvValve.Category) && prvValve.Category.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(prvValve.Brand) && prvValve.Brand.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(prvValve.Type) && prvValve.Type.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)))
                ?? Enumerable.Empty<PRVValve>().AsQueryable();
        }
    }

    // Metode Lifecycle
    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        await CheckUserAuthorizationAsync();
        await LoadAllPRVValveAsync();
        LoadUrlStatus();
    }

    // Metode Bantuan (Helper Methods)
    private async Task CheckUserAuthorizationAsync()
    {
        // Memeriksa peran pengguna untuk menentukan apakah mereka memiliki izin untuk mengedit data.
        if (authenticationStateTask is not null)
        {
            var authenticationState = await authenticationStateTask;
            var user = authenticationState.User;
            canEditData = user.IsInRole("Admin") || user.IsInRole("Maintenance") || user.IsInRole("Maintenance Supervisor");
        }
    }

    private async Task LoadAllPRVValveAsync()
    {
        // Mengambil semua data PRV Valve dari database secara asinkron.
        try
        {
            _allPRVValve = (await CRUDService.ReadAllAsync<PRVValve>(orderBy: q => q.OrderBy(v => v.PRVValveID)))
                .ToList()
                .AsQueryable();
        }
        catch (Exception ex)
        {
            // Menangani kesalahan saat memuat data dengan notifikasi yang informatif.
            NotificationService.AlertMessage($"Terjadi kesalahan saat memuat data PRV Valve. Silakan coba kembali nanti.");
            NotificationService.LogMessage($"Kesalahan saat memuat data PRV Valve: {ex.Message}");
        }
        finally
        {
            // Mengubah status loading setelah data berhasil dimuat atau terjadi kesalahan.
            isLoading = false;
        }
    }

    private void LoadUrlStatus()
    {
        // Mengambil dan menghapus pesan status dari URL jika ada.
        statusMessage = UrlStatusService.GetAndClearUrlStatusMessage();

        // Jika ada pesan status, navigasi ulang untuk membersihkan URL agar tidak muncul lagi saat refresh.
        if (!string.IsNullOrEmpty(statusMessage))
        {
            NavigationManager.NavigateTo(NavigationManager.Uri.Split('?')[0], replace: true);
        }
    }

    // Event Handler dan Navigasi
    private void ClearFilter()
    {
        // Mengatur ulang filter pencarian menjadi string kosong.
        searchFilter = string.Empty;
    }

    private void NavigateToAddPRVValve()
    {
        // Navigasi ke halaman untuk menambah data PRV Valve baru.
        NavigationManager.NavigateTo(ADD_PRV_VALVE_PATH);
    }

    private void NavigateToPRVValveInfo(PRVValve prvValve)
    {
        // Navigasi ke halaman detail informasi PRV Valve berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(PRV_VALVE_INFO_PATH, prvValve.PRVValveID));
    }

    private void NavigateToEditPRVValve(PRVValve prvValve)
    {
        // Navigasi ke halaman untuk mengedit data PRV Valve berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(PRV_VALVE_EDIT_PATH, prvValve.PRVValveID));
    }

    private void NavigateToDeletePRVValve(PRVValve prvValve)
    {
        // Navigasi ke halaman untuk menghapus data PRV Valve berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(PRV_VALVE_DELETE_PATH, prvValve.PRVValveID));
    }
}