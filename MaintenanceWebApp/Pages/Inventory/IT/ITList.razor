@page "/ITList"
@using MaintenanceWebApp.Data
@using MaintenanceWebApp.Services
@using Microsoft.EntityFrameworkCore
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.AspNetCore.WebUtilities
@using Microsoft.AspNetCore.Components
@inject NavigationManager NavigationManager

@* Services *@
@inject CRUDService CRUDService
@inject UrlStatusService UrlStatusService
@inject TableService TableService
@inject NotificationService NotificationService

@* Otorisasi Berdasarkan Peran *@
@attribute [Authorize(Roles = "Admin, Terminal Manager, Maintenance Supervisor, Maintenance")]

@* Komponen Daftar IT *@
<div class="card p-3">
    @* Notifikasi Status *@
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="container px-0">
            <div style="padding: 10px;" class="alert alert-success alert-dismissible fade show" role="alert">
                @statusMessage
                <button style="background-color: transparent; border: transparent; float: right; z-index: 0; padding: 1rem;"
                        type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tutup"></button>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-5 form-group">
            <h5 class="display-6">IT</h5>
            @if (HasIT)
            {
                <div class="d-flex align-items-center mt-3">
                    Jumlah per Halaman:
                    <select class="form-select form-select-sm w-auto ms-2" @bind="pagination.ItemsPerPage">
                        <option value="5">5</option>
                        @if (ITCount > 5)
                        {
                            <option value="10">10</option>
                        }
                        @if (ITCount > 10)
                        {
                            <option value="20">20</option>
                        }
                        @if (ITCount > 20)
                        {
                            <option value="50">50</option>
                        }
                    </select>
                </div>
            }
        </div>

        @if (canEditData)
        {
            <div class="col-sm-7 d-flex justify-content-end align-items-center">
                <button class="btn btn-primary" @onclick="NavigateToAddIT">
                    + Tambah
                </button>
            </div>
        }
    </div>

    <div>
        @* Tampilan Data IT *@
        @if (isLoading)
        {
            @* Memuat Data *@
            <div class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Memuat...</span>
                </div>
                <p>Memuat Data Inventory IT...</p>
            </div>
        }
        else if (!HasIT)
        {
            @* Tidak Ada Data *@
            <hr />
            <div class="text-center py-3">
                <p>Tidak ada Inventory IT ditemukan.</p>
                @if (!string.IsNullOrEmpty(searchFilter))
                {
                    <button class="btn btn-link" @onclick="ClearFilter">Hapus Filter</button>
                }
            </div>
        }
        else
        {
            @* Kotak Pencarian *@
            <div class="search-box mb-3 mt-3">
                <input class="form-control" type="search" autofocus @bind="searchFilter" @bind:event="oninput" placeholder="Cari Device, Merk..." />
            </div>

            @* Tabel Data IT *@
            <QuickGrid Items="FilteredIT" Virtualize="false" Pagination="pagination" Class="table table-striped table-hover table-bordered">
                <TemplateColumn Title="Device" Sortable="true">
                    <a style="cursor:pointer;
                       color: royalblue;" @onclick="@(() => NavigateToITInfo(context))">
                        @context.Device
                    </a>
                </TemplateColumn>
                <PropertyColumn Property="@(it => it.Brand)" Title="Merk" Sortable="true" />

                @if (canEditData)
                {
                    <TemplateColumn Title="Aksi" Class="td-action">
                        <button @onclick="@(() => NavigateToEditIT(@context))" class="btn btn-warning btn-sm">
                            <span class="oi oi-pencil"></span>
                        </button>
                        <button @onclick="@(() => NavigateToDeleteIT(context))" class="btn btn-danger btn-sm">
                            <span class="oi oi-trash"></span>
                        </button>
                    </TemplateColumn>
                }
            </QuickGrid>

            <Paginator State="pagination" />
        }
    </div>
</div>

@code {
    // Cascading Parameter
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    // Properti State
    private bool canEditData;
    private IQueryable<IT>? _allIT;
    private bool isLoading = true;
    private string statusMessage = string.Empty;

    // Konstanta
    private const string ADD_IT_PATH = "./ITAdd";
    private const string IT_INFO_PATH = "./ITInfo/{0}";
    private const string IT_EDIT_PATH = "./ITEdit/{0}";
    private const string IT_DELETE_PATH = "./ITDelete/{0}";

    // Pagination State
    private PaginationState pagination = new() { ItemsPerPage = 5 };

    // Properti Terkomputasi
    private bool HasIT => !isLoading && (_allIT?.Any() ?? false);
    private int ITCount => _allIT?.Count() ?? 0;

    // Properti untuk Filtering
    private string searchFilter
    {
        get => TableService.NoFilter ?? string.Empty;
        set
        {
            if (TableService.NoFilter != value)
            {
                TableService.NoFilter = value;
            }
        }
    }

    private IQueryable<IT> FilteredIT
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchFilter))
            {
                return _allIT ?? Enumerable.Empty<IT>().AsQueryable();
            }

            return _allIT?.Where(it =>
                (!string.IsNullOrEmpty(it.Device) && it.Device.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(it.Brand) && it.Brand.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)))
                ?? Enumerable.Empty<IT>().AsQueryable();
        }
    }

    // Metode Lifecycle
    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        await CheckUserAuthorizationAsync();
        await LoadAllITAsync();
        LoadUrlStatus();
    }

    // Metode Bantuan (Helper Methods)
    private async Task CheckUserAuthorizationAsync()
    {
        // Memeriksa peran pengguna untuk menentukan apakah mereka memiliki izin untuk mengedit data.
        if (authenticationStateTask is not null)
        {
            var authenticationState = await authenticationStateTask;
            var user = authenticationState.User;
            canEditData = user.IsInRole("Admin") || user.IsInRole("Maintenance") || user.IsInRole("Maintenance Supervisor");
        }
    }

    private async Task LoadAllITAsync()
    {
        // Mengambil semua data IT dari database secara asinkron.
        try
        {
            _allIT = (await CRUDService.ReadAllAsync<IT>(orderBy: q => q.OrderBy(v => v.DeviceID)))
                .ToList()
                .AsQueryable();
        }
        catch (Exception ex)
        {
            // Menangani kesalahan saat memuat data dengan notifikasi yang informatif.
            NotificationService.AlertMessage($"Terjadi kesalahan saat memuat data Inventory IT. Silakan coba kembali nanti.");
            NotificationService.LogMessage($"Kesalahan saat memuat data Inventory IT: {ex.Message}");
        }
        finally
        {
            // Mengubah status loading setelah data berhasil dimuat atau terjadi kesalahan.
            isLoading = false;
        }
    }

    private void LoadUrlStatus()
    {
        // Mengambil dan menghapus pesan status dari URL jika ada.
        statusMessage = UrlStatusService.GetAndClearUrlStatusMessage();

        // Jika ada pesan status, navigasi ulang untuk membersihkan URL agar tidak muncul lagi saat refresh.
        if (!string.IsNullOrEmpty(statusMessage))
        {
            NavigationManager.NavigateTo(NavigationManager.Uri.Split('?')[0], replace: true);
        }
    }

    // Event Handler dan Navigasi
    private void ClearFilter()
    {
        // Mengatur ulang filter pencarian menjadi string kosong.
        searchFilter = string.Empty;
    }

    private void NavigateToAddIT()
    {
        // Navigasi ke halaman untuk menambah data IT baru.
        NavigationManager.NavigateTo(ADD_IT_PATH);
    }

    private void NavigateToITInfo(IT it)
    {
        // Navigasi ke halaman detail informasi IT berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(IT_INFO_PATH, it.DeviceID));
    }

    private void NavigateToEditIT(IT it)
    {
        // Navigasi ke halaman untuk mengedit data IT berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(IT_EDIT_PATH, it.DeviceID));
    }

    private void NavigateToDeleteIT(IT it)
    {
        // Navigasi ke halaman untuk menghapus data IT berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(IT_DELETE_PATH, it.DeviceID));
    }
}