@page "/TankList"

@using MaintenanceWebApp.Data
@using MaintenanceWebApp.Services
@using Microsoft.AspNetCore.Components.QuickGrid
@using Microsoft.AspNetCore.Components

@* Services *@
@inject CRUDService CRUDService
@inject UrlStatusService UrlStatusService
@inject TableService TableService
@inject NotificationService NotificationService
@inject NavigationManager NavigationManager

@* Otorisasi Berdasarkan Peran*@
@attribute [Authorize(Roles = "Admin, Terminal Manager, Maintenance Supervisor, Maintenance")]

@* Komponen Daftar Tangki *@
<div class="card p-3">
    @* Notifikasi Status dari halaman lain *@
    @if (!string.IsNullOrEmpty(statusMessage))
    {
        <div class="container px-0">
            <div style="padding: 10px;" class="alert alert-success alert-dismissible fade show" role="alert">
                @statusMessage
                <button style="background-color: transparent; border: transparent; float: right; z-index: 0; padding: 1rem;" type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Tutup"></button>
            </div>
        </div>
    }

    <div class="row">
        <div class="col-sm-5 form-group">
            <h5 class="display-6">Tangki</h5>
            @if (HasTanks)
            {
                <div class="d-flex align-items-center mt-3">
                    Jumlah per Halaman:
                    <select class="form-select form-select-sm w-auto ms-2" @bind="pagination.ItemsPerPage">
                        <option value="5">5</option>
                        @if (TankCount > 5)
                        {
                            <option value="10">10</option>
                        }
                        @if (TankCount > 10)
                        {
                            <option value="20">20</option>
                        }
                        @if (TankCount > 20)
                        {
                            <option value="50">50</option>
                        }
                    </select>
                </div>
            }
        </div>

        @if (canEditData)
        {
            <div class="col-sm-7 d-flex justify-content-end align-items-center">
                <button class="btn btn-primary" @onclick="NavigateToAddTank">
                    + Tambah
                </button>
            </div>
        }
    </div>

    <div>
        @if (isLoading)
        {
            @* Tampilan saat memuat data *@
            <div class="text-center py-3">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Memuat...</span>
                </div>
                <p>Memuat Data Tangki...</p>
            </div>
        }
        else if (!HasTanks)
        {
            @* Tampilan jika tidak ada data *@
            <hr />
            <div class="text-center py-3">
                <p>Tidak ada data tangki ditemukan.</p>
                @if (!string.IsNullOrEmpty(searchFilter))
                {
                    <button class="btn btn-link" @onclick="ClearFilter">Hapus Filter</button>
                }
            </div>
        }
        else
        {
            @* Kotak Pencarian *@
            <div class="search-box mb-3 mt-3">
                <input class="form-control" type="search" autofocus @bind="searchFilter" @bind:event="oninput" placeholder="Cari No Tangki, Kapasitas, atau Coating..." />
            </div>

            @* Tabel Data Tank *@
            <QuickGrid Items="FilteredTanks" Virtualize="false" Pagination="pagination" Class="table table-striped table-hover table-bordered">
                <TemplateColumn Title="Nomor Tangki" Sortable="true">
                    <a style="cursor:pointer; color: royalblue;" @onclick="@(() => NavigateToTankInfo(context))">
                        @context.TankNo
                    </a>
                </TemplateColumn>
                <PropertyColumn Property="@(tank => tank.Capacity)" Title="Kapasitas (MT)" Sortable="true" />
                <PropertyColumn Property="@(tank => tank.InternalCoating)" Title="Internal Coating" Sortable="true" />

                @if (canEditData)
                {
                    <TemplateColumn Title="Aksi" Class="td-action">
                        <button @onclick="@(() => NavigateToEditTank(context))" class="btn btn-warning btn-sm">
                            <span class="oi oi-pencil"></span>
                        </button>
                        <button @onclick="@(() => NavigateToDeleteTank(context))" class="btn btn-danger btn-sm">
                            <span class="oi oi-trash"></span>
                        </button>
                    </TemplateColumn>
                }
            </QuickGrid>

            <Paginator State="pagination" />
        }
    </div>
</div>

@code {
    // Cascading Parameter
    [CascadingParameter]
    private Task<AuthenticationState>? authenticationStateTask { get; set; }

    // Properti State
    private bool canEditData;
    private IQueryable<Tank>? _allTanks;
    private bool isLoading = true;
    private string statusMessage = string.Empty;

    // Konstanta
    private const string ADD_TANK_PATH = "./TankAdd";
    private const string TANK_INFO_PATH = "./TankInfo/{0}";
    private const string TANK_EDIT_PATH = "./TankEdit/{0}";
    private const string TANK_DELETE_PATH = "./TankDelete/{0}";

    // Pagination State
    private PaginationState pagination = new() { ItemsPerPage = 5 };

    // Properti Terkomputasi
    private bool HasTanks => !isLoading && (_allTanks?.Any() ?? false);
    private int TankCount => _allTanks?.Count() ?? 0;

    // Properti untuk Filtering
    private string searchFilter
    {
        get => TableService.NoFilter ?? string.Empty;
        set
        {
            if (TableService.NoFilter != value)
            {
                TableService.NoFilter = value;
            }
        }
    }

    private IQueryable<Tank> FilteredTanks
    {
        get
        {
            if (string.IsNullOrWhiteSpace(searchFilter))
            {
                return _allTanks ?? Enumerable.Empty<Tank>().AsQueryable();
            }

            return _allTanks?.Where(t =>
                (!string.IsNullOrEmpty(t.TankNo) && t.TankNo.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (t.Capacity.ToString() != null && t.Capacity.ToString()!.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)) ||
                (!string.IsNullOrEmpty(t.InternalCoating) && t.InternalCoating.Contains(searchFilter, StringComparison.OrdinalIgnoreCase)))
                ?? Enumerable.Empty<Tank>().AsQueryable();
        }
    }

    // Metode Lifecycle
    protected override async Task OnInitializedAsync()
    {
        isLoading = true;
        await CheckUserAuthorizationAsync();
        await LoadAllTanksAsync();
        LoadUrlStatus();
    }

    // Metode Bantuan (Helper Methods)
    private async Task CheckUserAuthorizationAsync()
    {
        // Memeriksa peran pengguna untuk menentukan apakah mereka memiliki izin untuk mengedit data.
        if (authenticationStateTask is not null)
        {
            var user = (await authenticationStateTask).User;
            canEditData = user.IsInRole("Admin") || user.IsInRole("Maintenance") || user.IsInRole("Maintenance Supervisor");
        }
    }

    private async Task LoadAllTanksAsync()
    {
        // Mengambil semua data tank dari database secara asinkron.
        try
        {
            _allTanks = (await CRUDService.ReadAllAsync<Tank>(orderBy: q => q.OrderBy(t => t.TankNo)))
                .ToList()
                .AsQueryable();
        }
        catch (Exception ex)
        {
            // Menangani kesalahan saat memuat data dengan notifikasi.
            NotificationService.AlertMessage($"Terjadi kesalahan saat memuat data Tank. Silakan coba kembali nanti.");
            NotificationService.LogMessage($"Kesalahan saat memuat data Tank: {ex.Message}");
        }
        finally
        {
            // Mengubah status loading setelah selesai.
            isLoading = false;
        }
    }

    private void LoadUrlStatus()
    {
        // Mengambil dan menghapus pesan status dari URL.
        statusMessage = UrlStatusService.GetAndClearUrlStatusMessage();
        if (!string.IsNullOrEmpty(statusMessage))
        {
            // Membersihkan URL agar pesan tidak muncul lagi saat refresh.
            NavigationManager.NavigateTo(NavigationManager.Uri.Split('?')[0], replace: true);
        }
    }

    // Event Handler dan Navigasi
    private void ClearFilter()
    {
        // Mengatur ulang filter pencarian.
        searchFilter = string.Empty;
    }

    private void NavigateToAddTank()
    {
        // Navigasi ke halaman tambah tank.
        NavigationManager.NavigateTo(ADD_TANK_PATH);
    }

    private void NavigateToTankInfo(Tank tank)
    {
        // Navigasi ke halaman detail informasi breather valve berdasarkan ID.
        NavigationManager.NavigateTo(string.Format(TANK_INFO_PATH, tank.TankID));
    }

    private void NavigateToEditTank(Tank tank)
    {
        // Navigasi ke halaman edit tank.
        NavigationManager.NavigateTo(string.Format(TANK_EDIT_PATH, tank.TankID));
    }

    private void NavigateToDeleteTank(Tank tank)
    {
        // Navigasi ke halaman hapus tank.
        NavigationManager.NavigateTo(string.Format(TANK_DELETE_PATH, tank.TankID));
    }
}